<div class="container">
  <div class="title"> <h1> Mig's Recipes </h1> </div>
  <div class="header">
    <div class="menu">
     <%= link_to "Add A cocktail", new_cocktail_path %>
   </div>
 </div>

 <div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="fixed-card">
      <div class="cocktail-card-content">
        <div class="cocktail-card-title">
          <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
        </div>
        <div> <p> <%= cocktail.doses.count%> <%= cocktail.doses.count == 1 ? "Ingredient" : "Ingredients" %></p></div>
      </div>
      <div class="card-actions">
        <%= link_to "More Info" , cocktail_path(cocktail) %>
        <%= link_to "Edit", edit_cocktail_path(cocktail, :class => "ml-3 text-warning")  %>
        <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' }, :class => "ml-3 text-danger" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
