<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="cocktail-form">
        <h1>Add a new cocktail</h1>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.button :submit %>
        <% end %>
      </div>
      <%= link_to "Cancel", cocktails_path %>
    </div>
  </div>
</div>




