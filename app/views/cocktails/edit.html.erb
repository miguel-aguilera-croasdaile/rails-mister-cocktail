<div class="wrapper">
  <div class="large-card">
    <div class="header">
      <h1>Editing cocktail</h1>
    </div>

    <%= form_for(@cocktail) do |f| %>
    <div class="form">
      <div class="box">
        <div class="row" id="title-row">Title</div>
        <div class="row">
          <%= f.text_field :name %>
        </div>
      </div>
    </div>
    <%= f.submit %>
    <% end %>
    <%= link_to "Cancel", cocktails_path  %>
  </div>
</div>
